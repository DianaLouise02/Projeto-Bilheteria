<script>
    const pedidoId = localStorage.getItem('pedidoSelecionado');
    if(pedidoId) {
        fetch(`http://localhost:3001/removerPedido/${pedidoId}`, {
            method: 'DELETE'
        })
        .then(response => {
            if (!response.ok) {
                throw new Error('Erro ao excluir o pedido');
            }
            return response.json();
        })
        .then(data => {
            console.log(data);
            location.reload(); 
        })
        .catch(error => console.error('Erro ao excluir o pedido:', error));
    }

</script>
